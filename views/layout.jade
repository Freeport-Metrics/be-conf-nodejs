doctype html
html
  head
    title Be@conf - FreeportMetrics
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:300' rel='stylesheet' type='text/css')
    if process.env.NODE_ENV == 'production'
      link(rel='stylesheet', href='/dist/all.min.css')
      script(src='/dist/all.min.js')
    else
      // build:css /dist/all.min.css
      each resource in static_resources.css
        link(rel='stylesheet', href='/#{resource}')
      // endbuild
      // build:js /dist/all.min.js
      each resource in static_resources.js
        script(src='/#{resource}')
      // endbuild
  body(ng-app="beatconf")
    block content
